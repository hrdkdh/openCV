   "source": [
    "import cv2\n",
    "\n",
    "img = cv2.imread(\"../images/candy.jpg\")\n",
    "img1 = cv2.cvtColor(img,cv2.COLOR_BGR2HSV)  # BGR 이미지를 HSV로 변환\n",
    "h,s,v = cv2.split(img1) # 색 공간 분리\n",
    "\n",
    "cv2.imshow(\"img\", img)\n",
    "cv2.imshow(\"h\", h)\n",
    "cv2.imshow(\"s\" , s)\n",
    "cv2.imshow(\"v\",v) \n",
    "cv2.waitKey() \n",
    "cv2.destroyAllWindows()"
   ]
  }
